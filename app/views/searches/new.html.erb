<%= form_for @search, url: {action: "create"}, :html => { :class => "form-horizontal" }  do |f| %>
  <fieldset>
    <legend>New Search Keyword</legend>

    <div class="form-group">
      <%= f.label :keyword, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :keyword, class: "form-control" %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Add new keyword', class: "btn btn-default" %>
      </div>
    </div>
  </fieldset>
<% end %>

<%= link_to 'Back', searches_path %>